<section class="max-w-7xl mx-auto mt-24 mb-36 px-6 lg:px-8 flex flex-col items-center gap-y-12 text-primary">
    <h2 class="max-w-2xl mx-auto text-center text-3xl font-headings font-bold tracking-tight text-primary sm:text-4xl">
        From The Blog</h2>
    {{!-- <p class="max-w-2xl mx-auto -mt-6 text-center text-lg text-primary leading-8"></p> --}}

    <div class="mx-auto max-w-2xl lg:max-w-none">
        <div class="grid grid-cols-1 gap-x-10 gap-y-20 content-stretch lg:grid-cols-3">
            {{#get "posts" filter="tag:blog+tag:-hash-featured" limit="3" include="tags,authors"}}
            {{#foreach posts}}

              <div class="flex flex-col h-full overflow-hidden rounded-lg shadow-lg">
                <div class="flex-shrink-0">
                  <img class="h-48 w-full object-cover object-center" srcset="{{img_url feature_image size=" s"}} 300w, {{img_url feature_image size="m" }} 600w,
                            {{img_url feature_image size="l" }} 1000w, {{img_url feature_image size="xl" }} 2000w"
                            sizes="(max-width: 1000px) 400px, 800px" src="{{img_url feature_image size=" m"}}"
                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" loading="lazy" />
                </div>
                <div class="flex flex-1 flex-col justify-between bg-white p-6 space-y-6 divide-y-2">
                  <div class="flex-1">
                    <p class="text-sm font-medium text-primary/80">
                        {{#foreach tags}}
                            <a href="{{url}}" class="capitalize mr-3 hover:underline">{{name}}</a>
                        {{/foreach}}
                    </p>
                    <a href="{{url}}" class="mt-2 block space-y-2">
                      <p class="text-lg font-bold font-headings text-primary h-[3.5rem] line-clamp-2 underline">{{title}}</p>
                      <p class="mt-3 text-base text-gray-500 line-clamp-3">{{excerpt}}</p>
                    </a>
                  </div>
                  <div class="flex items-center pt-4">
                    {{#primary_author}}
                    <div class="flex-shrink-0">
                      <a href="{{url}}">
                        <span class="sr-only">{{name}}</span>
                        <img class="h-10 w-10 rounded-full" src="{{img_url profile_image size="xs"}}" alt="{{name}}"/>
                      </a>
                    </div>
                    <div class="ml-3">
                      <p class="text-sm font-medium text-gray-900">
                        <a href="{{url}}" class="hover:underline">
                          {{name}}
                        </a>
                      </p>
                    {{/primary_author}}
                      <div class="flex space-x-1 text-sm text-gray-500">
                        <time datetime="{{date format="YYYY-MM-DD"}}">{{date published_at}}</time>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            {{/foreach}}
            {{/get}}
        </div>
    </div>

    <a href="/blog">
      <button class="px-3 py-2 rounded bg-secondary text-sm text-primary font-medium shadow-xs hover:bg-secondary/80 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">View all posts&nbsp;<span aria-hidden="true">â†’</span></button>
    </a>
    
</section>